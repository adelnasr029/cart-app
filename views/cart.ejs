<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cart Tab</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <link rel="stylesheet" href="/css/styles.css">
</head>
<body >
    <header>
        <%- include('./partials/header') %>
        <h1>Cart Tab</h1>
    </header>
    <div class="cartTab">
        <h1>Shopping Cart</h1>
        <div class="listCart">
                <div>
                    <% for(let i=0; i < selectedItems.length; i++) {%>
                        <div class="item">
                            <div class="image">
                                <img src="<%= `/img/${selectedItems[i].image}`%>" alt="">
                            </div>
                            <div class="name"><%= selectedItems[i].name %></div>
                            <div class="totalPrice"><%= selectedItems[i].price %></div>
                            <div class="quantity">
                                <span class="minus" onclick="subtract('<%= selectedItems[i]._id %>')">-</span>
                                <span ><%= selectedItems[i].count %></span>
                                <span class="plus" onclick="increment('<%= selectedItems[i].name %>', '<%= selectedItems[i].price %>', '<%= selectedItems[i].image %>')" >+</span>
                                <span class="fa fa-trash" class="del" onclick="deleteBtn('<%= selectedItems[i].name %>')">
                                </span>
                            </div>
                        </div>
                    <% } %>
                </div>
        </div>
        
        <div class="btn">
            <% let total = 0 %>
            <% for(let i=0; i < selectedItems.length; i++) {%>
                <% total +=selectedItems[i].count * selectedItems[i].price %>
                <% } %>
                <span>total: <%= total %>$</span>
            <button class="checkOut">
                <a href="/cart/checkout">Check Out</a> 
            </button>
        </div>
    </div>
    <a href="/logout">Logout</a>

    <script src="/js/script.js"></script>
</body>
</html>